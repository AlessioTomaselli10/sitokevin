  <script is:inline>
// Gestione Form Inline e Recensioni
document.addEventListener('DOMContentLoaded', function() {
  // ===== GESTIONE FORM DI CONTATTO =====
  const contactForm = document.getElementById('contactForm');
  const thanksMessage = document.getElementById('thanksMessage');
  const contactSection = document.getElementById('contact-section');
  const openButton = document.querySelector('.open-button');
  const cancelButton = document.querySelector('.cancel-button');

  // Mostra il form quando si clicca sul CTA
  if (openButton) {
    openButton.addEventListener('click', function(e) {
      e.preventDefault();
      showContactForm();
    });
  }

  // Funzione per mostrare il form
  window.showContactForm = function() {
    if (contactSection) {
      contactSection.style.display = 'block';
      
      // Scroll smooth alla sezione
      setTimeout(() => {
        contactSection.scrollIntoView({ 
          behavior: 'smooth', 
          block: 'center' 
        });
      }, 100);
    }
  };

  // Funzione per nascondere il form
  window.hideContactForm = function() {
    if (contactSection) {
      contactSection.style.display = 'none';
      if (contactForm) {
        contactForm.reset();
        contactForm.style.display = 'block';
      }
      if (thanksMessage) {
        thanksMessage.style.display = 'none';
      }
    }
  };

  // Gestione pulsante Annulla
  if (cancelButton) {
    cancelButton.addEventListener('click', hideContactForm);
  }

  // Gestione invio form
  if (contactForm) {
    contactForm.addEventListener('submit', async function(e) {
      e.preventDefault();

      const formData = {
        name: document.getElementById('name')?.value || '',
        email: document.getElementById('email')?.value || '',
        number: document.getElementById('number')?.value || '',
        page: document.getElementById('page')?.value || '',
        message: document.getElementById('message')?.value || ''
      };

      // Validazione base
      if (!formData.name || !formData.email || !formData.message) {
        alert('Per favore, compila tutti i campi obbligatori.');
        return;
      }

      try {
        // Disabilita il pulsante durante l'invio
        const submitBtn = contactForm.querySelector('.submit-button');
        if (submitBtn) {
          submitBtn.disabled = true;
          submitBtn.textContent = 'Invio in corso...';
        }

        const response = await fetch('/contact.php', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(formData)
        });

        if (response.ok) {
          // Successo - mostra messaggio
          contactForm.style.display = 'none';
          thanksMessage.style.display = 'block';
          
          // Reset dopo 5 secondi
          setTimeout(() => {
            thanksMessage.style.display = 'none';
            contactForm.style.display = 'block';
            contactForm.reset();
            hideContactForm();
          }, 5000);
        } else {
          throw new Error(`Errore server: ${response.status}`);
        }
      } catch (error) {
        console.error('Errore invio form:', error);
        alert('Si √® verificato un errore durante l\'invio. Riprova pi√π tardi.');
      } finally {
        // Riabilita il pulsante
        const submitBtn = contactForm.querySelector('.submit-button');
        if (submitBtn) {
          submitBtn.disabled = false;
          submitBtn.textContent = 'üìß Invia Richiesta';
        }
      }
    });
  }

  // ===== GESTIONE CAROSELLO RECENSIONI =====
  const reviews = [
    {
      name: "Alessio Tomaselli",
      image: "/images/fotoale.avif",
      profession: "Web Designer",
      link: "",
      text: "Credo ci sia un enorme differenza sostanziale tra chi fa le cose e chi sa fare le cose. Kevin rientra SICURAMENTE nella 2¬™ categoria: mi sono trovato benissimo, come persona e ancora di pi√π con i risultati ottenuti"
    },
    {
      name: "Elisa Di Ganci",
      image: "/images/fotoelisa.avif",
      profession: "Imprenditrice Digitale",
      link: "",
      text: "Kevin √® molto pi√π che un professionista. Ha creato una strategia cucita su misura per il mio brand che mi ha permesso di acquisire pi√π contatti, e attraverso la sua guida farli diventare miei clienti fedeli. Lo consiglio assolutamente!"
    },
    {
      name: "Giusy Fazzelli",
      image: "/images/fotogiusy.avif",
      profession: "Event Manager",
      link: "https://giusyballoonsfantasy.it/",
      text: "Grazie a Kevin ho capito che non basta postare sui social: con lui a guidare il mio brand ho raddoppiato le richieste e attirato i clienti giusti. Kevin √® stato decisivo per il mio business."
    }
  ];

  let currentReviewIndex = 0;

  // Funzione per visualizzare una recensione
  function displayReview(index) {
    const review = reviews[index];
    const reviewElements = {
      image: document.querySelector('.review-image'),
      name: document.querySelector('.review-name'),
      profession: document.querySelector('.review-profession'),
      link: document.querySelector('.review-link'),
      text: document.querySelector('.review-text')
    };

    if (reviewElements.image) reviewElements.image.src = review.image;
    if (reviewElements.name) reviewElements.name.textContent = review.name;
    if (reviewElements.profession) reviewElements.profession.textContent = review.profession;
    if (reviewElements.link) {
      reviewElements.link.href = review.link;
      reviewElements.link.textContent = review.link ? new URL(review.link).hostname : '';
    }
    if (reviewElements.text) reviewElements.text.textContent = review.text;
  }

  // Funzioni per navigare le recensioni
  window.prevReview = function() {
    currentReviewIndex = (currentReviewIndex - 1 + reviews.length) % reviews.length;
    displayReview(currentReviewIndex);
  };

  window.nextReview = function() {
    currentReviewIndex = (currentReviewIndex + 1) % reviews.length;
    displayReview(currentReviewIndex);
  };

  // Inizializza la prima recensione
  displayReview(currentReviewIndex);

  // ===== GESTIONE ANIMAZIONI SCROLL =====
  const animatedElements = document.querySelectorAll('[data-animate]');
  
  if (animatedElements.length > 0) {
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('animated');
          observer.unobserve(entry.target);
        }
      });
    }, { 
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    });

    animatedElements.forEach(el => observer.observe(el));
  }

  // ===== GESTIONE RESPONSIVE =====
  function handleResize() {
    // Eventuali aggiustamenti responsive
    if (window.innerWidth < 768) {
      // Mobile adjustments
    }
  }

  window.addEventListener('resize', handleResize);
  handleResize();
});

